html
    head 
        title #{artwork.name}
        link(rel='stylesheet', href='/css/styles.css')
    body
        include ../partials/headers
        div.artworks 
            div.artwork
                a(href="/gallery/" + artwork._id)
                    img(src=artwork.image)
                div.artwork-info
                    h2= artwork.name
                    h3 
                        a(href="/artists/" + artwork.artist) #{artwork.artist}
                    h4= artwork.year
                    h4= artwork.medium
                    h4= artwork.category
                    h4= artwork.description